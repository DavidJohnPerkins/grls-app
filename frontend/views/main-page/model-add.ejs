    <body>
        <%- include('../includes/navigation.ejs') %>
		<main>
			<h1 class="centered">Model Addition</h1>
			<form class="model-form" action="/add-model" method="POST">
				<div class="container">
					<div class="form-control">
						<label for="sobr">Sobriquet</label>
						<input type="text" name="sobriquet" id="sobr">
					</div>
					<div class="form-control">
						<label for="hq">Hotness Quotient</label>
						<input type="number" name="hq" id="hq" step="1.0">
					</div>
					<div class="form-control">
						<label for="yob">Year of Birth</label>
						<input type="number" name="yob" id="yob">
					</div>
				</div>
				<div class="form-control">
					<label for="names">Names</label>
					<input type="text" name="names" id="names">
				</div>
				<div class="form-control">
					<label for="description">Description</label>
					<textarea name="description" id="description" rows="5"></textarea>
				</div>
				<h3>Images</h3>
				<div class="container">
					<div class="form-control">
						<label for="imageTH">Thumbnail</label>
						<input type="text" name="imageTH" id="imageTH">
					</div>
					<div class="form-control">
						<label for="imageFA">Face</label>
						<input type="text" name="imageFA" id="imageFA">
					</div>
					<div class="form-control">
						<label for="imageRF">Reference</label>
